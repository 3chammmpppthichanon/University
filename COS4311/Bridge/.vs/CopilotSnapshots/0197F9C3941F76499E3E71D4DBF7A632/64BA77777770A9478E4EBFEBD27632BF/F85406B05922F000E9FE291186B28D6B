
using System;

namespace Bridge
{
    public interface IRubberMaterial
    {
        public string GetMaterialType();
        public int Durability { get; set; }

    }

    public class NaturalRubber : IRubberMaterial
    {
        public NaturalRubber() => Console.WriteLine("Creating Natural Rubber");
        public string GetMaterialType() => "Natural Rubber";
    }

    public class SyntheticRubber : IRubberMaterial
    {
        public SyntheticRubber() => Console.WriteLine("Creating Synthetic Rubber");
        public string GetMaterialType() => "Synthetic Rubber";
    }

    public abstract class Tire
    {
        public string Type { get; set; }
        public decimal Price { get; set; }
        protected IRubberMaterial RubberMaterial { get; set; }

        public abstract string GetDetail();
    }

    public class City : Tire
    {
        public City(IRubberMaterial rubberMaterial)
        {
            Console.WriteLine("Creating City Tire");
            Type = "City Tire";
            Price = 1000.00m;
            RubberMaterial = rubberMaterial;
        }

        public override string GetDetail() => $"{Type} - Material {RubberMaterial.GetMaterialType()} - ${Price}";
    }

    public class Touring : Tire
    {
        public Touring(IRubberMaterial rubberMaterial)
        {
            Console.WriteLine("Creating Touring Tire");
            Type = "Touring Tire";
            Price = 1500.00m;
            RubberMaterial = rubberMaterial;
        }

        public override string GetDetail() => $"{Type} - Material {RubberMaterial.GetMaterialType()} - ${Price}";
    }

    public class Sport : Tire
    {
        public Sport(IRubberMaterial rubberMaterial)
        {
            Console.WriteLine("Creating Sport Tire");
            Type = "Sport Tire";
            Price = 2000.00m;
            RubberMaterial = rubberMaterial;
        }

        public override string GetDetail() => $"{Type} - Material {RubberMaterial.GetMaterialType()} - ${Price}";
    }
    public class Program
    {
        static void Main(string[] args)
        {
            IRubberMaterial naturalRubber = new NaturalRubber();
            Tire touringTire1 = new Touring(naturalRubber);
            Console.WriteLine(touringTire1.GetDetail());

            IRubberMaterial syntheticRubber = new SyntheticRubber();
            Tire touringTire2 = new Touring(syntheticRubber);
            Console.WriteLine(touringTire2.GetDetail());

            Tire sportTire = new Sport(syntheticRubber);
            Console.WriteLine(sportTire.GetDetail());

            Tire cityTire = new City(syntheticRubber);
            Console.WriteLine(cityTire.GetDetail());
        }
    }
}